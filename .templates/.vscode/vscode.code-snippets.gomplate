{{- $L := (datasource "language") -}}
{{- if and (has $L "vscode") (has $L.vscode "script") }}{
	"Script": {
		"scope": "{{ $L.language.name }}",
		"prefix": "script",
		"body": [
			{{- if (has $L.vscode "script") }}
			{{- range split ($L.vscode.script | strings.TrimSpace) "\n" }}
			"{{ . }}",
			{{- end -}}
			{{- end }}
			""
		],
		"description": "Script template"
	}
}{{ end }}
